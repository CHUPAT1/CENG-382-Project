@page
@model CengReservation.Pages.Admin.ClassroomManager.IndexModel

@{
    ViewData["Title"] = "Classroom Manager";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">🏫 Classroom List</h2>

    <div class="text-end mb-3">
        <a asp-page="Create" class="btn btn-outline-success">
            ➕ Create New Classroom
        </a>
    </div>

    @if (Model.Classroom.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm border text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Classroom[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Classroom[0].Capacity)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Classroom)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Capacity</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">✏️ Edit</a>
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">🔍 Details</a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No classrooms found.</div>
    }
</div>
